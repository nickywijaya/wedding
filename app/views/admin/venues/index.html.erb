<!-- app/views/admin/venues/index.html.erb -->

<%= stylesheet_link_tag "admin" %>

<div class="row align-items-center mb-5 mt-5">
  <h1 class="text-center">Venues</h1>
</div>

<div class="row align-items-center mb-5 mt-5">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Venue</th>
        <th>Wedding</th>
        <th>Address</th>
        <th>Max Attendees</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Type</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @venues.each_with_index do |venue, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= venue.name %></td>
          <td><%= venue.weddings&.first&.hashtag %></td>
          <td><%= venue.address %></td>
          <td><%= venue.max_attendees %></td>
          <td><%= venue.start_time.strftime("%b %d, %Y %I:%M %p") %></td>
          <td><%= venue.end_time.strftime("%b %d, %Y %I:%M %p") %></td>
          <td><%= venue.fetch_venue_type %></td>
          <td>
            <%= link_to 'Edit', edit_admin_venue_path(venue), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
