<%= stylesheet_link_tag "admin" %>

<div class="row align-items-center mb-5 mt-5">
  <div class="col-sm-1">
    <a href=<%= admin_weddings_path %> class="no-style-link">
      <span>
        <i class="bx bx-left-arrow-alt"></i>
      </span>
      Back
    </a>
  </div>
  <div class="col-sm-11">
    <h1 class="text-center">Edit Wedding Detail</h1>
  </div>
</div>

<div class="row align-items-center mb-5 mt-5">
  <%= form_with model: @wedding, url: admin_wedding_path(@wedding), method: :patch, local: true do |form| %>
    <div class="form-group">
      <%= form.label :hashtag, "Wedding Hashtag" %>
      <%= form.text_field :hashtag, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :story, "Wedding Story" %>
      <%= form.text_area :story, class: "form-control", rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
