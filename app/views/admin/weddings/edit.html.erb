<h1>Edit Wedding Details</h1>

<%= stylesheet_link_tag "admin" %>

<%= form_with model: @wedding, url: admin_wedding_path(@wedding), method: :patch, local: true do |form| %>
  <% if @wedding.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@wedding.errors.count, "error") %> prohibited this wedding from being saved:</h2>
      <ul>
        <% @wedding.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :hashtag, "Wedding Hashtag" %>
    <%= form.text_field :hashtag, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :story, "Wedding Story" %>
    <%= form.text_area :story, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Wedding", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Weddings', admin_weddings_path, class: 'btn btn-secondary' %>
